{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "allowJs": false,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "~/*": ["src/*"],
      "@/*": ["src/*"],
    },
  },
 
  "types": ["vite-plugin-pages/client","element-plus/global", "vite-env"],
  "typeRoots": [
    "./node_modules/@types/",
    "src/types",
  ],
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "components.d.ts", "src/types/*.d.ts"],
  // "exclude": [
  //   "node_modules"
  // ]
}
